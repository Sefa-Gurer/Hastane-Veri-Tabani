.PHONY: quick-install start stop logs clean test

quick-install:
	chmod +x quick-setup.sh
	./quick-setup.sh

start:
	chmod +x start-app.sh
	./start-app.sh

stop:
	docker-compose down

logs:
	docker-compose logs -f

oracle-logs:
	docker logs -f oracle-xe

test:
	@echo "ðŸ”— BaÄŸlantÄ± test ediliyor..."
	@docker exec oracle-xe sqlplus -S hospital/hospital123@localhost:1521/XE <<< "SELECT 'BaÄŸlantÄ± baÅŸarÄ±lÄ±!' FROM DUAL;" || echo "âŒ BaÄŸlantÄ± hatasÄ±!"

clean:
	docker-compose down -v
	docker system prune -f

db-shell:
	docker exec -it oracle-xe sqlplus hospital/hospital123@localhost:1521/XE

help:
	@echo "ðŸ¥ Hastane YÃ¶netim Sistemi"
	@echo "========================="
	@echo "make quick-install  # HÄ±zlÄ± kurulum (Ã¶nerilen)"
	@echo "make start         # UygulamayÄ± baÅŸlat"
	@echo "make stop          # Servisleri durdur"
	@echo "make logs          # TÃ¼m loglarÄ± gÃ¶ster"
	@echo "make oracle-logs   # Sadece Oracle loglarÄ±"
	@echo "make test          # BaÄŸlantÄ±yÄ± test et"
	@echo "make db-shell      # Oracle SQL shell"
	@echo "make clean         # Temizle"
